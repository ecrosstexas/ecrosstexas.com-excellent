{% if post.data.category == "shortpost" %}

<li id="{{ post.data.title | slugify }}" class="card flow overflow-hidden note">
  <span>Quick Hits</span>
  {% set definedDate = post.date %} {% include "partials/date.njk" %}
  {{ post.data.content | safe }}
<p class"directlink"><a href="{{ post.url}}" title="Direct link to {{post.post.title}}">#</a></p>
</li>

{% elif post.data.category == "link" %}

<li id="{{ post.data.title | slugify }}" class="card flow overflow-hidden link">
  <span>Links</span>
  
  {{ post.data.content | safe }}
  <p class="directlink"><a href="{{ post.url}}" title="Direct link to {{post.data.title}}">#</a></p>
</li>

{% else %}

<li id="{{ post.data.title | slugify }}"" class="card flow overflow-hidden"">
  <h3>
    <a href="{{ post.url | url }}">{{ post.data.title }}</a>
  </h3>

  {% set definedDate = post.date %} {% include "partials/date.njk" %}
  <p>{{ post.data.description }}</p>
</li>

{% endif %}